<Window x:Class="LangLang.View.Student.AcceptedEnterCourseRequestForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View.Student"
        mc:Ignorable="d"
        WindowStartupLocation = "CenterScreen"
        Title="AcceptedEnterCourseRequestForm" Height="220" Width="400">
    <Grid>

        <StackPanel VerticalAlignment="Top" Margin="10">
            <TextBlock Text="You have been accepted to the course:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="19" Margin="0,20,0,20" Height="27"/>
            <TextBlock x:Name="activeCourseName" Text="CourseName" FontWeight="Bold"  HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22" />
            <Button Content="Close" Click="CloseButton_Click" Width="100" FontSize="16" Margin="10,35,0,10"/>
        </StackPanel>
    </Grid>
</Window>
